<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DockPanelGradient">
        <Setter Property="ItemsControl.Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.6,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF111B35" Offset="0.9"/>
                    <GradientStop Color="#FF2C3E66" Offset="0.07"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DockPanelGradientBlack">
        <Setter Property="ItemsControl.Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.6,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF111B35" Offset="0.9"/>
                    <GradientStop Color="#FF142956" Offset="0.07"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>